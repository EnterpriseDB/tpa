---

instances:
- node: 1
  Name: {{ hostnames[1] }}
  location: 0
  role:
    - primary
  backup: {{ hostnames[3] }}

- node: 2
  Name: {{ hostnames[2] }}
  location: 0
  role:
    - replica
  upstream: {{ hostnames[1] }}

- node: 3
  Name: {{ hostnames[3] }}
  location: 0
  role:
    - barman
    - log-server
    - monitoring-server
{% if (2+cascaded_replicas) % 2 == 0 %}
{%   if failover_manager == 'efm' %}
    - efm-witness
{%   elif failover_manager == 'patroni' %}
{%   else %}
    - witness
  upstream: {{ hostnames[1] }}
{%   endif %}
{% endif %}

{% for i in range(4,4+cascaded_replicas) %}
- node: {{ i }}
  Name: {{ hostnames[i] }}
  location: 1
  role:
    - replica
  upstream: {{ hostnames[2] }}
{% endfor %}

{# Place etcd and haproxy nodes across locations #}
{% if failover_manager == 'patroni' %}
{% for i in range(4+cascaded_replicas,7+cascaded_replicas) %}
- node: {{ i }}
  Name: {{ hostnames[i] }}
  location: {{ i % 2 }}
  role:
    - etcd
  vars:
    etcd_location: main
{% endfor %}

{% if enable_haproxy %}
{% for i in range(7+cascaded_replicas,9+cascaded_replicas) %}
- node: {{ i }}
  Name: {{ hostnames[i] }}
  location: {{ i % 2 }}
  role:
    - haproxy
  vars:
    haproxy_backend_servers:
      - {{ hostnames[1] }}
      - {{ hostnames[2] }}
{% for be in range(4,4+cascaded_replicas) %}
      - {{ hostnames[be] }}
{% endfor %}
{% endfor %}
{% endif %}
{% endif %}
