import sys

try:
    from tpaexec import configure
except Exception as err:
    if "-v" in sys.argv[1:]:
        print(
            "Exception was raised during tpaexec configure. Details below",
            file=sys.stderr,
        )
        raise
    print(
        "Please invoke via: tpaexec configure <clustername> --architecture <archname>"
    )
    sys.exit(-1)


if __name__ == "__main__":
    configure(sys.argv[1:])
