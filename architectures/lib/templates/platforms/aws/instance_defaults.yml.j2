type: {{ instance_type }}

default_volumes:
- device_name: root
  volume_type: gp2
  volume_size: {{ root_volume_size }}
  encrypted: yes
- device_name: /dev/xvdf
  volume_type: gp2
  volume_size: {{ postgres_volume_size }}
  encrypted: yes
  vars:
    volume_for: postgres_data
