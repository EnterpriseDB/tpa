## contrib/auto_explain

auto_explain.log_min_duration = '60s'
auto_explain.log_analyze = on
auto_explain.log_buffers = on
auto_explain.log_timing = on
auto_explain.log_verbose = on
auto_explain.log_format = text
auto_explain.log_nested_statements = on

## contrib/pg_stat_statements

pg_stat_statements.max = 1000
pg_stat_statements.track = all
pg_stat_statements.track_utility = on
pg_stat_statements.save = on

{% if 'platypus' in postgres_extensions %}
## platypus

platypus.port = {{ platypus_port }}
platypus.database = {{ platypus_database }}
{% if platypus_bind is defined %}
platypus.bind = {{ platypus_bind }}
{% endif %}
{% if platypus_idle_timeout is defined %}
platypus.idle_timeout = '{{ platypus_idle_timeout }}ms'
{% endif %}
{% endif %}

