Host *
    User {{ ansible_user }}
    Port {{ ansible_port }}
    IdentitiesOnly yes
    IdentityFile "{{ cluster_dir|relpath(tpa_dir) }}/{{ ssh_key_file }}"
    UserKnownHostsFile "{{ cluster_dir|relpath(tpa_dir) }}/known_hosts"
    ServerAliveInterval 60

{% for h in instance_vars %}
Host {{ h.Name }}
    HostName {{ h.ip_address }}
{% endfor %}
