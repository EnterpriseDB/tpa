Host *
{% if ansible_user != '' %}
    User {{ ansible_user }}
{% endif %}
    Port {{ ansible_port }}
    IdentitiesOnly yes
    IdentityFile "{{ ssh_key_file }}"
    UserKnownHostsFile "known_hosts"
    ServerAliveInterval 60

{% for h in instance_vars %}
Host {{ h.Name }}
    HostName {{ h.ip_address }}
{% endfor %}
