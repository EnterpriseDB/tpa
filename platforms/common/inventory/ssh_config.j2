Host *
    Port {{ ansible_port }}
    IdentitiesOnly yes
    IdentityFile "{{ ssh_key_file }}"
    UserKnownHostsFile known_hosts tpa_known_hosts
    ServerAliveInterval 60

{% for h in instance_vars %}
Host {{ h.Name }}
{% if 'ansible_user' in h.vars %}
    User {{ h.vars.ansible_user }}
{% endif %}
    HostName {{ h|deploy_ip_address }}
{% endfor %}
