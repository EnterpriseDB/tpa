{% if (ec2_ami_user|default('admin') == 'root') or (cluster_ssh_port|default(22) != 22) %}
{% if ec2_ami_user|default('admin') == 'root' %}
sed -i.bak 's/^PermitRootLogin no/PermitRootLogin yes/' /etc/ssh/sshd_config
{% endif %}

{% if cluster_ssh_port|default(22) != 22 %}
echo "" >> /etc/ssh/sshd_config
echo "Port {{ cluster_ssh_port }}" >> /etc/ssh/sshd_config
{% endif %}

service sshd restart
{% endif %}

{% if centrify_ad_domain|default(false) and centrify_ad_group|default(false) %}
/opt/centrify/domain-leave.sh
/opt/centrify/domain-join.sh {{ centrify_ad_domain }} {{ centrify_ad_group }} aws
{% endif %}

