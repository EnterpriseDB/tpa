{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":dependencyDashboardApproval",
    "schedule:earlyMondays"
  ],

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,

  "reviewers": [
    "EnterpriseDB/tpaexec-dev-team"
  ],

  "baseBranches": [
    "main"
  ],

  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,

  "enabledManagers": [
    "pip-compile",
    "ansible-galaxy",
    "github-actions"
  ],
  "commitMessagePrefix": "[Dep Update] ",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": " ({{{displayFrom}}} => {{{displayTo}}})",
  "pip-compile": {
    "fileMatch": [
      "requirements.*.txt$",
      "requirements/.*.txt$",
      ""
    ],
    "labels": [
      "pip dependencies",
      "renovate"
    ]
  },
  "ansible-galaxy": {
    "labels": [
      "ansible dependencies",
      "renovate"
    ]
  }
}
