# Please do not edit this file. Your changes will be overwritten. Put
# your configuration overrides into conf.d/9999-override.conf instead.

log_destination = {{ log_destination|default('syslog') }}
logging_collector = {{ logging_collector|default('off') }}
syslog_facility = {{ syslog_facility|default('LOCAL0') }}
syslog_ident = {{ syslog_ident|default('postgres') }}

log_checkpoints = on
log_connections = on
log_disconnections = on
log_duration = off
log_hostname = off
log_lock_waits = on
log_statement = {{ log_statement|default('ddl') }}
log_temp_files = {{ log_temp_files|default(8192) }}

log_min_duration_statement = {{ log_min_duration_statement|default('5s') }}

log_line_prefix = '{{ log_line_prefix|default("%t [%u@%r/%a/%d:%p]: [%l] ") }}'

cluster_name = '{{ inventory_hostname }}'
