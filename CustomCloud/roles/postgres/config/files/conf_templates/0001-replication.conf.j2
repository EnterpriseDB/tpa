archive_mode = on
archive_command = '/bin/true'

max_wal_senders = {{ max_wal_senders|default(16) }}
max_replication_slots = {{ max_replication_slots|default(16) }}
wal_keep_segments = {{ wal_keep_segments|default(0) }}
wal_sender_timeout = {{ wal_sender_timeout|default('60s') }}
wal_receiver_timeout = {{ wal_sender_timeout|default('60s') }}
track_commit_timestamp = {{ track_commit_timestamp|default('on') }}

hot_standby = on
hot_standby_feedback = on
