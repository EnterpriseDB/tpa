server {{ vpn_network }} {{ vpn_netmask }}

local 0.0.0.0
port 1194

dev tun
proto udp

dh /etc/tpa/openvpn/dh2048.pem
ca /etc/tpa/openvpn/{{ cluster_name }}-root-CA.pem
cert /etc/tpa/openvpn/{{ cluster_name }}-{{ inventory_hostname }}.crt
key  /etc/tpa/openvpn/{{ cluster_name }}-{{ inventory_hostname }}.key

client-config-dir /etc/tpa/openvpn/ccd
ifconfig-pool-persist /etc/tpa/openvpn/ipp.txt

comp-lzo
user nobody
group {% if ansible_distribution == 'redhat' %} nobody {% else %} nogroup {% endif %}
keepalive 10 300
tls-timeout = 120s
client-to-client
persist-key
persist-tun

log-append /var/log/openvpn.log
