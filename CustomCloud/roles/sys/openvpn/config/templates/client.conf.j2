client

remote {{ hostvars[openvpn_server].public_ip }} 1194

dev tun
proto udp

ca {{ vpn_dir }}/root-CA.pem
cert {{ vpn_dir }}/{{ inventory_hostname }}.crt
key  {{ vpn_dir }}/{{ inventory_hostname }}.key
tls-auth {{ vpn_dir }}/ta.key 1

nobind
comp-lzo
user nobody
group {% if ansible_distribution == 'redhat' %} nobody {% else %} nogroup {% endif %}
keepalive 10 30
ns-cert-type server
resolv-retry infinite
persist-key
persist-tun

log-append /var/log/openvpn.log
