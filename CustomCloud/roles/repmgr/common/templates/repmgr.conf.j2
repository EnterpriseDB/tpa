cluster={{ cluster_name|lower }}
node={{ node }}
node_name=node{{ node }}
conninfo='host={{ ip_address }} user=repmgr dbname=repmgr'
master_response_timeout=60
reconnect_attempts=6
reconnect_interval=10
failover=automatic
pg_bindir={{ postgres_bin_dir }}
promote_command='/etc/repmgr/promote_command.sh'
follow_command='/etc/repmgr/follow_command.sh'
logfile='/var/log/postgresql/repmgrd.log'
{% if hostvars[upstream].backup != '' %}
restore_command='/usr/bin/barman-wal-restore -U barman {{ hostvars[hostvars[upstream].backup].ip_address }} {{ hostvars[upstream].backup_name }} %f %p'
{% endif %}
