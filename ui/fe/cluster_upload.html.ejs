<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="TPA login screen.">
    <meta name="author" content="2nd Quadrant">
    <meta id="login-required">
    <link rel="icon" href="/favicon.ico">

    <title>TPA: Cluster config.yml upload</title>
<style>
#cover {position: fixed; height: 100%; width: 100%; top:0; left: 0; background: #000; z-index:9999;}
body { visibility: hidden; }

</style>
    </head>
  <body>
      <div id="cover"></div>
    <!-- LOGIN FORM -->
    <div id="LoginForm" class="modal modal-fullscreen fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Login to TPA</h3>
                </div>
                <form class="login_form">
                    <div class="modal-body">
                        <p><input type="text" class="username" name="username" placeholder="Username"></p>
                        <p><input type="password" class="password" name="password" placeholder="Password"></p>
                    </div>
                    <div class="modal-footer">
                        <p><button type="submit" class="btn btn-primary">Sign in</button>
                        <!-- <a href="#">Forgot Password?</a> -->
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- LOGIN FORM END -->

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">2ndQuadrant TPA</a>
        </div>
      </div>
    </nav>

    <div class="container">
        <hr>
        <h4>New cluster from config.yml</h4>
        <form class="cluster_upload">
            <div class="form-group">
                <input type="text" placeHolder="Tenant" class="form-control tenant">
                <input type="file" class="form-control config_yml">
            </div>
            <button type="submit" class="btn btn-success">Upload</button>
        </form>
    </div> <!-- /container -->
  </body>
</html>
